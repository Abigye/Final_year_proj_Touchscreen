<Container>:
    name: "container"
    text_input: text_input
    label_wid: label_wid

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 50

       

        # Button:
        #     text: 'Hello World'

        TextInput:
            id: text_input
            font_size: 60
            multiline: False
            text:''

        Label:
            id: label_wid
            text:'Some Text'

        FloatLayout:
            Button:
                pos_hint: {'center_x':0.5, 'y':0.1}
                text: 'Go!'
                font_size: 40
                on_press:  root.change_label_text()
                on_release: 
                    app.root.current = "video_player"
                    root.manager.transition.direction = "left"
