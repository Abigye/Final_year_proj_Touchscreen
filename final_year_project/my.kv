<LiteEx>:
    BoxLayout:
        orientation: 'vertical'
        size: self.width, self.height

        Label:
            id: word_label
            text:'Enter A Name'
            text_size: self.size
            halign: 'center'
            valign: 'middle'

        TextInput:
            id: word_input
            multiline: False
            size_hint: 1,.5

        Button:
            size_hint: 1,.5
            font_size:32
            text: "Submit Name"
            on_press: root.submit()

        Button:
            size_hint: 1,.5
            font_size:32
            text: "Show Name"
            on_press: root.show_name()


